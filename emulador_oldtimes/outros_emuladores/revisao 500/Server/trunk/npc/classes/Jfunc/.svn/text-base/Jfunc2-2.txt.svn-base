//Alquimista
function	script	Alc_check	{

	if(BaseJob == Job_Alchem) goto L_Alch;
	if(BaseJob == Job_Alchem || BaseJob == Job_Alchem) goto L_Other;
	return;

L_Other:	
	show "Bem vindo à União dos "+callfunc("classname",18,"P","M")+".  Oh, Minhas desculpas mas eu estou ocupado agora.";
	close;
L_Alch:
	show "Olá companheiro Alquimísta.  Como vão os negocios?  Bem eu espero, bem, boa sorte para você.";
	close;
}

