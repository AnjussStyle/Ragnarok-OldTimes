y_airport.gat,126,43,4	script	Serviçais do Aeroporto#1::AirportY	90,{
	show "[Serviçais do Aeroporto]";
	show "Bem-vindo ao aeroporto.";
	show "Como eu posso ajudá-lo?";
	next;
	menu "Suba a bordo",-,"Cancelar",L_Cancel;

		show "[Serviçais do Aeroporto]";
		show "A taxa para subir a bordo";
		show "é 1,200 zeny, mas se você tem";
		show "um Ingresso Grátis para o Navio,"; 
		show "à taxa será renunciada.";
		show "Você deseja subir a bordo?";
		next;
		menu "Sim",-,"Não",L_Cancel;

			if(countitem(7311) > 0) goto GotTicket;
			if(zeny < 1200) goto L_NoZeny;
			set Zeny,zeny-1200;
			warp "y_airport.gat",148,51;
			close;

		GotTicket:
			delitem 7311,1;
			warp "y_airport.gat",148,51;
			close;

		L_NoZeny:
			show "[Serviçais do Aeroporto]";
			show "Você não tem bastante zeny.";
			close;

	L_Cancel:
		show "[Serviçais do Aeroporto]";
		show "Obrigado e";
		show "tenha um bom dia.";
		close;
}

